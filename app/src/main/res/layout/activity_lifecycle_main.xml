<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/activity_stander"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Stander模式"
        app:layout_constraintTop_toTopOf="parent"
        
        />
    <Button
        android:id="@+id/activity_single_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="singleTop模式"
        app:layout_constraintTop_toBottomOf="@id/activity_stander"
        android:onClick="startSingleTopActivity"
        />
    <Button
        android:id="@+id/activity_singleTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_single_top"
        android:textAllCaps="false"
        android:text="singleTask模式"/>
</android.support.constraint.ConstraintLayout>